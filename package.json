    "@ionic-native/core": "^5.31.1",
    "@ionic-native/qr-scanner": "^5.31.1",
    "@ionic/react": "^5.0.7",
    "@ionic/react-router": "^5.0.7",
    "@protokol/client": "^1.0.0-beta.38",
    "aes-js": "^3.1.2",
    "bip39": "^3.0.3",
    "cordova-plugin-qrscanner": "^3.0.1",
    "date-fns": "^2.19.0",
    "ionicons": "^5.0.0",
    "jetifier": "^1.6.6",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.0",
